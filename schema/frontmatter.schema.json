{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Documentation frontmatter schema",
    "type": "object",
    "properties": {
        "title": { "type": "string" },
        "version": { "type": "string" },
        "author": { "type": "string" },
        "created": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        "date_created": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        }
    },
    "required": ["title", "version"],
    "additionalProperties": false
}
