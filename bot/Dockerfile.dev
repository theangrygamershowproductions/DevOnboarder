FROM node:22-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy bot-specific package files
COPY bot/package*.json ./

# Install dependencies
RUN npm ci

# Copy bot source code
COPY bot/ ./

# Create logs directory (centralized logging policy)
RUN mkdir -p logs

# Create non-root user for security
RUN useradd -m -s /bin/bash botuser && \
    chown -R botuser:botuser /app
USER botuser

# Health check using our custom script
HEALTHCHECK --interval=30s --timeout=10s --start-period=15s --retries=3 \
    CMD node /app/health-check.js || exit 1

# Expose bot port (for health monitoring if applicable)
EXPOSE 8080

# Development command with hot reload
CMD ["npm", "run", "dev"]
