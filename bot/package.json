{
    "name": "devonboarder-bot",
    "version": "1.0.0",
    "description": "Discord bot for DevOnboarder multi-guild automation and verification",
    "author": "DevOnboarder Project",
    "license": "MIT",
    "type": "module",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/main.js",
        "dev": "npm run build && npm start",
        "test": "jest --coverage",
        "coverage": "jest --coverage",
        "lint": "eslint \"src/**/*.{js,ts}\"",
        "format": "prettier --write \"src/**/*.{js,ts}\"",
        "generate-invite": "node scripts/generate-invite.js",
        "invite": "npm run generate-invite",
        "guild-check": "node guild-check.js",
        "test-guilds": "node scripts/test-guild-connections.js",
        "status": "bash scripts/deployment-status.sh",
        "deploy-commands": "node scripts/deploy-commands.js",
        "deploy": "bash deploy.sh"
    },
    "dependencies": {
        "discord.js": "^14.22.1",
        "dotenv": "^17.2.2",
        "toml": "^3.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.5.2",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "eslint": "^9.36.0",
        "jest": "^30.1.3",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.4",
        "typescript": "^5.8.3"
    },
    "jest": {
        "preset": "ts-jest/presets/default-esm",
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "testEnvironment": "node",
        "collectCoverage": true,
        "testTimeout": 30000,
        "transform": {
            "^.+\\.ts$": [
                "ts-jest",
                {
                    "useESM": true
                }
            ]
        },
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "coverageReporters": [
            "text",
            "lcov",
            "json-summary"
        ],
        "coveragePathIgnorePatterns": [
            "<rootDir>/src/commands",
            "<rootDir>/src/utils/loadFiles.ts"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 95,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        }
    },
    "engines": {
        "node": ">=22"
    }
}
