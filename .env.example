# Environment configuration for DevOnboarder
# Copy this file to .env and update values as needed.
# Choose appropriate APP_ENV: development, production, or ci

# Application environment (determines which URL variants are used)
APP_ENV=development

# Redis connection settings
REDIS_URL=redis://localhost:6379/0

# Database connection settings
DATABASE_URL=postgresql://devuser:devpass@localhost:5432/devdb

TOKEN_EXPIRE_SECONDS=3600
# Enable when running within the TAGS stack so diagnostics
# expect all services to be available
TAGS_MODE=false

# Feature flags
IS_ALPHA_USER=false
IS_FOUNDER=false

# DISCORD Primary Guild
DISCORD_GUILD_ID=

# # Discord Community
# DISCORD_GUILD_ID=

# Bot Configuration
ENVIRONMENT=dev
DISCORD_BOT_READY=true

# C2C Server (Central Authority)
DISCORD_C2C_GUILD_ID=       # Identity & permissions source
ADMIN_SERVER_GUILD_ID=       # Where admin roles are defined
OWNER_ROLE_ID=               # Management permissions
ADMINISTRATOR_ROLE_ID=      # Infrastructure access
MODERATOR_ROLE_ID=         # Operations access

# TAGS Ecosystem Servers (Service-Specific)
DISCORD_DEV_GUILD_ID=       # DevOnboarder development
DISCORD_PROD_GUILD_ID=       # Production services
DISCORD_GAMING_GUILD_ID=    # Gaming community

# Discord role and guild IDs
# Verified User Roles
VERIFIED_USER_ROLE_ID=
VERIFIED_MEMBER_ROLE_ID=
GOVERNMENT_ROLE_ID=
MILITARY_ROLE_ID=
EDUCATION_ROLE_ID=


# Secrets
# These credentials should be supplied through your deployment's secret store
# and never committed to version control.
# Legacy Discord token alias (use DISCORD_BOT_TOKEN instead)
DISCORD_TOKEN=
DISCORD_BOT_TOKEN=
DISCORD_API_TIMEOUT=30

# TEST DISCORD CREDENTIALS - TEMPORARY FOR TESTING
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_PUBLIC_KEY=


# Must be set to a non-empty value. The auth service refuses to start
# if this variable is "secret" or empty outside development mode.
JWT_SECRET_KEY=
AUTH_SECRET_KEY=
JWT_ALGORITHM=HS256
BOT_JWT=
API_BASE_URL=

# Environment-specific Discord OAuth redirect URIs
DISCORD_REDIRECT_URI_DEV=http://localhost/login/discord/callback
DISCORD_REDIRECT_URI_PROD=https://auth.theangrygamershow.com/login/discord/callback
DISCORD_REDIRECT_URI_CI=http://localhost:8002/login/discord/callback

# Current Discord redirect URI (set based on APP_ENV)
DISCORD_REDIRECT_URI=
INIT_DB_ON_STARTUP=

# Environment-specific CORS origins
CORS_ALLOW_ORIGINS_DEV=http://localhost,http://localhost:3000,http://localhost:8001,http://localhost:8002,http://localhost:8003,http://localhost:8081
CORS_ALLOW_ORIGINS_PROD=https://dev.theangrygamershow.com,https://auth.theangrygamershow.com,https://api.theangrygamershow.com,https://discord.theangrygamershow.com,https://dashboard.theangrygamershow.com
CORS_ALLOW_ORIGINS_CI=http://localhost,http://localhost:3000,http://localhost:8001,http://localhost:8002,http://localhost:8003,http://localhost:8081

# Current CORS origins (set based on APP_ENV)
CORS_ALLOW_ORIGINS=

# Environment-specific Auth URLs
AUTH_URL_DEV=http://localhost
AUTH_URL_PROD=https://auth.theangrygamershow.com
AUTH_URL_CI=http://localhost:8002

# Current auth URL (set based on APP_ENV)
AUTH_URL=
CHECK_HEADERS_URL=

# Environment-specific Frontend URLs
VITE_AUTH_URL_DEV=http://localhost
VITE_AUTH_URL_PROD=https://auth.theangrygamershow.com
VITE_AUTH_URL_CI=http://localhost:8002

# Current frontend auth URL (set based on APP_ENV)
VITE_AUTH_URL=
VITE_API_URL=
VITE_FEEDBACK_URL=
VITE_DISCORD_INTEGRATION_URL=
VITE_DASHBOARD_URL=
VITE_DISCORD_CLIENT_ID=
VITE_SESSION_REFRESH_INTERVAL=300000

# Development tunnel URLs (subdomains)
DEV_TUNNEL_AUTH_URL=
DEV_TUNNEL_API_URL=
DEV_TUNNEL_APP_URL=
DEV_TUNNEL_DISCORD_URL=
DEV_TUNNEL_DASHBOARD_URL=
DEV_TUNNEL_FRONTEND_URL=

# Vite allowed hosts (for development server access)
VITE_ALLOWED_HOST_DEV=
VITE_ALLOWED_HOST_PROD=

# MS Teams integration
TEAMS_APP_ID=
TEAMS_APP_PASSWORD=
TEAMS_TENANT_ID=
TEAMS_CHANNEL_ID_ONBOARD=

# Llama2 Agile Helper
LLAMA2_API_KEY=
LLAMA2_API_TIMEOUT=10
LLAMA2_URL=https://api.llama2.ai/generate

# Orchestration bot keys
DEV_ORCHESTRATION_BOT_KEY=
STAGING_ORCHESTRATION_BOT_KEY=
PROD_ORCHESTRATION_BOT_KEY=
CI_BOT_TOKEN=
CI_BOT_USERNAME=
# Common CI tokens (usually injected by the workflow)
GH_TOKEN=
CI_ISSUE_AUTOMATION_TOKEN=g
CI_ISSUE_TOKEN=
NPM_TOKEN=


# Orchestration
# Base URL for orchestration service
ORCHESTRATOR_URL=https://orchestrator.example.com
# Bearer token used by orchestration scripts
ORCHESTRATION_KEY=

# Diagnostics
# Skip coverage badge generation when offline
OFFLINE_BADGE=
# Path for JSON env audit results
JSON_OUTPUT=

# Optional: set this when running your own LanguageTool server
LANGUAGETOOL_URL=

# OpenAI integration for Codex
OPENAI_API_KEY=

# Tool versions (CI typically supplies these)
TRIVY_VERSION=
VALE_VERSION=

# Service ports (for development and CI)
AUTH_PORT=8002
BACKEND_PORT=8001
BOT_PORT=8002
FRONTEND_PORT=8081
FRONTEND_URL=

# Environment mode indicators
NODE_ENV=development
PYTHON_ENV=development
CI=false
DEBUG=false

# Cloudflare Tunnel configuration
# These values are placeholders and should be replaced with actual tokens
CF_DNS_API_TOKEN=
TUNNEL_TOKEN=
TUNNEL_ID=
